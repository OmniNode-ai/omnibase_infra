{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Configuration for markdown link validation. See scripts/validation/validate_markdown_links.py",
  "ignorePatterns": [
    {
      "pattern": "^https?://localhost",
      "comment": "Localhost URLs are not accessible in CI"
    },
    {
      "pattern": "^https?://127\\.0\\.0\\.1",
      "comment": "Loopback addresses are not accessible in CI"
    },
    {
      "pattern": "^https?://192\\.168\\.",
      "comment": "Private network addresses are not accessible in CI"
    },
    {
      "pattern": "^https?://10\\.",
      "comment": "Private network addresses are not accessible in CI"
    },
    {
      "pattern": "^https?://linear\\.app/",
      "comment": "Linear tickets require authentication"
    },
    {
      "pattern": "^https?://example\\.com",
      "comment": "Example domain placeholder"
    }
  ],
  "excludeFiles": [
    ".pytest_cache/**",
    ".venv/**",
    "venv/**",
    "node_modules/**",
    "archived/**",
    "*.egg-info/**",
    ".mypy_cache/**",
    ".ruff_cache/**",
    "build/**",
    "dist/**",
    "htmlcov/**"
  ],
  "checkExternal": false,
  "externalTimeout": 5000
}
