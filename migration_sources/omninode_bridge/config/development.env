# Development Environment Configuration for OmniNode Bridge

# Environment
ENVIRONMENT=development
SERVICE_VERSION=0.1.0
SERVICE_INSTANCE_ID=dev-local
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5436
POSTGRES_DATABASE=omninode_bridge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_POOL_MIN_SIZE=2
POSTGRES_POOL_MAX_SIZE=10
POSTGRES_QUERY_TIMEOUT_SECONDS=30
POSTGRES_SSL_ENABLED=false
POSTGRES_LEAK_DETECTION=true

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_WORKFLOW_TOPIC=dev.omninode_bridge.onex.workflows.v1
KAFKA_TASK_EVENTS_TOPIC=dev.omninode_bridge.onex.task-events.v1
KAFKA_COMPRESSION_TYPE=gzip
KAFKA_BATCH_SIZE=16384
KAFKA_BATCH_TIMEOUT_MS=1000
KAFKA_GROUP_ID=omninode-bridge-dev

# Security Configuration
SECURITY_API_KEY=omninode-bridge-dev-key-2024
SECURITY_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_AUDIT_LOG_ENABLED=true

# Service Configuration
HOOK_RECEIVER_HOST=0.0.0.0
HOOK_RECEIVER_PORT=8001
HOOK_RECEIVER_WORKERS=1
HOOK_RECEIVER_URL=http://localhost:8001

MODEL_METRICS_HOST=0.0.0.0
MODEL_METRICS_PORT=8005
MODEL_METRICS_WORKERS=1
MODEL_METRICS_URL=http://localhost:8005

WORKFLOW_COORDINATOR_HOST=0.0.0.0
WORKFLOW_COORDINATOR_PORT=8006
WORKFLOW_COORDINATOR_WORKERS=1

# Consul Configuration
# LOCAL_IP: Local machine IP for health check URLs when Consul is remote
# Set this to your machine's network IP (e.g., 192.168.86.XXX) if Consul is on 192.168.86.200
# Leave as localhost if Consul is running locally
METADATA_STAMPING_LOCAL_IP=localhost

# AI Lab Configuration (Development)
AI_LAB_MAC_STUDIO=192.168.86.200
AI_LAB_MAC_MINI=192.168.86.101
AI_LAB_AI_PC=192.168.86.201
AI_LAB_MACBOOK_AIR=192.168.86.105
AI_LAB_OLLAMA_PORT=11434


# Custom API Configuration for Zen MCP
CUSTOM_API_URL=http://192.168.86.201:8000/v1

# Cache Configuration
CACHE_WORKFLOW_MEMORY_MB=100
CACHE_WORKFLOW_DISK_MB=500
CACHE_WORKFLOW_COMPRESSION_THRESHOLD_KB=10
CACHE_WORKFLOW_DISK_THRESHOLD_KB=50
CACHE_WORKFLOW_MAX_AGE_HOURS=24

# Circuit Breaker Configuration
CB_CRITICAL_FAILURE_THRESHOLD=5
CB_CRITICAL_RECOVERY_TIMEOUT=60
CB_HIGH_FAILURE_THRESHOLD=4
CB_HIGH_RECOVERY_TIMEOUT=45
CB_MEDIUM_FAILURE_THRESHOLD=3
CB_MEDIUM_RECOVERY_TIMEOUT=30
CB_LOW_FAILURE_THRESHOLD=2
CB_LOW_RECOVERY_TIMEOUT=15
