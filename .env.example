# Environment Configuration for OmniBase Infrastructure
# Copy this file to .env and update with your values

# === PostgreSQL Configuration ===
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_ADAPTER_PORT=8081

# === Consul Configuration ===
CONSUL_PORT=8500
CONSUL_DNS_PORT=8600
CONSUL_LOG_LEVEL=INFO
CONSUL_ADAPTER_PORT=8082

# === RedPanda/Kafka Configuration ===
REDPANDA_PORT=9092
REDPANDA_EXTERNAL_PORT=29092
REDPANDA_ADMIN_PORT=9644
REDPANDA_PROXY_PORT=8082
REDPANDA_UI_PORT=8080
REDPANDA_LOG_LEVEL=info
REDPANDA_DEFAULT_PARTITIONS=3
REDPANDA_DEFAULT_REPLICATION_FACTOR=1
REDPANDA_LOG_RETENTION_MS=604800000
REDPANDA_SEGMENT_MS=86400000

# === GitHub Token (for private dependencies) ===
GITHUB_TOKEN=your_github_personal_access_token_here

# === Node Environment ===
NODE_ENV=development

# === Optional: Additional Adapters ===
# KAFKA_ADAPTER_PORT=8083
# HOOK_NODE_PORT=8084
